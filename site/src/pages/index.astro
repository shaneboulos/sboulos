---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import WorkSection from "../components/WorkSection.astro";
---

<Layout>
  <Hero />
  <main class="container">
    <WorkSection />
  </main>
</Layout>

<style>
  body {
    margin: 0;
    background: #f9fafb;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      sans-serif;
  }

  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 4rem 2rem;
    line-height: 1.6;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.1rem;
    color: #444;
    margin-bottom: 1rem;
  }
</style>
