---
const title = "Shane Boulos";
const subtitle =
  "Building the future of CX, automation, and AI-driven technical workflows.";
---

<section class="hero">
  <div class="hero-inner">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    <p class="hero-tagline">
      Currently: implementing AI-powered workflows across Shopify, Klaviyo, and
      customer support tools.
    </p>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    max-width: 100vw; /* ensure it spans full viewport width */
    min-height: 70vh;
    margin: 0 auto; /* center the section itself if parent is flex */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 1.5rem;
    background: #f7f7f8;
  }

  .hero-inner {
    max-width: 700px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2.1rem, 6vw, 2.7rem);
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 3.3vw, 1.15rem);
    line-height: 1.5;
    color: #555;
    max-width: 34rem;
    margin: 0 auto 0.25rem;
  }

  .hero-tagline {
    font-size: clamp(0.95rem, 3vw, 1.05rem);
    color: #777;
    margin-top: 0.5rem;
  }

  @media (max-width: 600px) {
    .hero {
      min-height: 60vh;
      padding: 3rem 1.25rem 2.5rem;
    }
  }
</style>
